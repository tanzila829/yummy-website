<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Floating labels Form</h5>

              <!-- Floating Labels Form -->
              <form class="row g-3" method="post" action="/admin/about/{{about.id}}/update" encType="multipart/form-data">
                <div class="col-md-12">
                  <div class="form-floating">
                    <input  value="{{about.title}}" type="text" class="form-control" id="floatingName" placeholder="title" name="title">
                    <label for="floatingName">title</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <textarea class="form-control" id="floatingEmail" placeholder="details" id="floatingTextarea" style="height: 100px;" >{{about.details}}</textarea>
                    <label for="floatingEmail">details</label>
                  </div>
                </div>
                
                <div class="col-md-12">
                  <div class="col-md-12">
                        <label for="floatingCity">Image</label>
                    <div class="form-floating">
                      
                      <input type="file" class="form-control form-control-sm" name="image" id="floatingCity">
                      <img src="/{{about.image}}" width="200px" height="250px" alt="{{about.title}}">
                    </div>
                  </div>
                </div>
                
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">update</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- End floating Labels Form -->

            </div>
          </div>
    </section>
</main>