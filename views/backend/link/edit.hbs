<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Floating labels Form</h5>

              <!-- Floating Labels Form -->
              <form class="row g-3" method="post" action="/admin/link/{{link.id}}/update" encType="multipart/form-data">
               

                <div class="col-12">
                  <div class="form-floating">
                    <textarea class="form-control form-control-sm" name="facebook" placeholder="facebook" id="floatingTextarea" style="height: 100px;" >{{link.facebook}}</textarea>
                    <label for="floatingTextarea">facebook</label>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-floating">
                    <textarea  class="form-control form-control-sm" name="twiter" placeholder="twiter" id="floatingTextarea" style="height: 100px;" >{{link.twiter}}</textarea>
                    <label for="floatingTextarea">twiter</label>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-floating">
                    <textarea class="form-control form-control-sm" name="instragram" placeholder="instragram" id="floatingTextarea" style="height: 100px;" >{{link.instragram}}</textarea>
                    <label for="floatingTextarea">instragram</label>
                  </div>
                </div>


                <div class="col-12">
                  <div class="form-floating">
                    <textarea  class="form-control form-control-sm" name="linkedin" placeholder="linkedin" id="floatingTextarea" style="height: 100px;" >{{link.linkedin}}</textarea>
                    <label for="floatingTextarea">linkedin</label>
                  </div>
                </div>

               
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">update</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- End floating Labels Form -->

            </div>
          </div>
    </section>
</main>